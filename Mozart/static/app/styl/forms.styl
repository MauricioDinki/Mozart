fieldset
	border-color mozart-light-blue
	border-style solid
	border-width 5px 0 0 0
	margin 0 auto !important
	margin-bottom 20px !important
	padding 30px 0
	
	legend
		color mozart-medium-blue
		font-size 22px
		font-weight 700
		margin 0 auto
		padding 0 10px

.form-error, .load-more-error
	color red
	margin-right 30px
	
.form-error
	text-align center

.mozart-field
	background white
	border-color mozart-light-blue
	border-style solid
	border-width 0 0 3px 0
	display block
	input-fields()
	margin-bottom 5px
	transition border-color 0.2s, color 0.2s, height 0.2s, margin-top 0.2s
	width 100%

.mozart-field.ng-invalid.ng-dirty,.mozart-label.invalid-state
	border-color red
	color #FF7373
	
.mozart-label.invalid-state
	color #FF7373 !important

.mozart-label.valid-state
	color green !important
	
.mozart-field.ng-valid.ng-dirty,.mozart-label.valid-state
	border-color green

.mozart-field.empty-initial-field
	height 0
	
.mozart-field.active-field, select.mozart-field.empty-initial-field, .mozart-field.ng-invalid.ng-dirty
	height 40px
	
.mozart-field-container
	display inline-block
	height auto
	text-align left
	
.mozart-form, .settings-form
	margin 0 auto
	max-width 750px
	text-align center
		
.mozart-form
	background white
	margin-top 30px
	padding 20px
	width 100%
	
.mozart-label
	box-sizing border-box !important
	display block
	font-weight 700
	padding 5px 10px
	top 0
	transition all 0.2s
	width 100%

.mozart-label.initial-label, .non-active-label
	color mozart-dark-gray
	cursor text
	
.mozart-label.active-label, .non-active-label
	height 25px !important
	
.mozart-label.initial-label
	height 40px
	
.mozart-label.active-label
	color mozart-light-blue
	cursor default

select.mozart-field option
	color mozart-dark-gray

textarea.mozart-field
	padding-top 8px
	resize none
	
textarea.mozart-field.active-field, textarea.mozart-field.ng-invalid.ng-dirty
	height 80px
	
.one-element, .two-elements, .three-elements
	vertical-align top
	width 88%
	
.one-element
	display block
	margin 0 auto