
.aviso-error
	color red
	margin-right 30px
	text-align right

.cantidad
	background azul_sitio
	border-radius 3px
	color white
	display inline-block
	font-weight 700
	margin-right 10px
	padding 5px 8px
	vertical-align middle


#contenido
	display block
	margin 0
	padding 0

#configuraciones
	background white
	padding 20px

	fieldset
		background #eee
		border 2px solid #ddd
		border-radius 2px
		display inline-block
		vertical-align top

		legend
			color azul_sitio
			font-weight 700

.doble-cuadro
	width 35%;

.error
	color red
	display block
	

form
	line-height 30px
	text-align center
	
	.ng-invalid.ng-dirty
		background #FFBBBB

	.ng-valid.ng-dirty
		background #C0F9C0

.iblock
	display inline-block
	margin-top 5px
	vertical-align middle
	
	label
		padding 5px
		width 30%
	select, input
		width 69%

.lista-vinculadas
	margin-right 40px

	li
		background white
		display block
		font-family Montserrat
		min-height 40px
		line-height 40px
		margin-top 2px
		position relative
		
		&:before
			left 5px
			position absolute
		
		.boton
			height 30px
			line-height 20px
			right 5px
			position absolute
			top 5px
			
		.link-social
			margin-left 40px
			position relative
			margin-right 80px

.menu-bloques
	display block
	height auto
	margin 0
	padding 0
	position relative
	text-align left

.opcion-menu
	background #ededed
	display block
	margin 1px 0

	a
		color naranja_oscuro
		display block
		font-family "Lato"
		font-size 18px
		line-height 30px
		padding 5px
		vertical-align bottom

		&:before
			margin-right 8px

	a.activo
		color azul_sitio

	&:hover a
		color azul_sitio

#obras-principal
	height 150%
	margin-top 90px
	padding 20px
	position relative
	text-align center
	width 100%

#contenedor-principal
	display inline-block
	height auto
	margin-bottom 15px
	width 95%

	h2
		color gris_oscuro
		font-family Montserrat
		font-size 20px
		margin 0 0 5px 0

	p
		color gris_oscuro
		display inline-block
		font-style italic
		margin 0
		text-align left

#informacion, #configuraciones
	display inline-block
	vertical-align top
	width 73%

	.bloque
		background white
		border 1px solid azul_sitio
		display inline-block
		margin 5px
		text-align left
		vertical-align middle
		width 47%

		div
			margin 15px

		h4
			width 100%

		span
			display inline-block
			overflow auto
			width 100%

	video
		width 100%

.thumbnail-usuario-p
	float left
	height 50px
	margin-left 5px
	width 50px

#section-general
	margin-top 40px
	min-height 780px
	padding-top 40px
	position relative
	text-align center

	.formulario
		background white
		display inline-block
		padding 20px
		position relative
		width 750px

.s-mzfield
	margin 0 auto
	margin-top 5px
	
	input, select, tags-input
		width 60%
		
	label
		width 30%
		

.tarjeta-promotor
	background white
	border #888 solid 1px
	color  gris_oscuro
	display inline-block
	font-size 30px
	height auto
	margin 6px 4px
	padding-bottom 5px
	text-align center
	vertical-align middle
	width 280px

	a
		color azul_sitio
		font-weight 700

	a:hover
		color naranja_oscuro

	.nombre-promotor
		font-size 20px
		line-height 0px

textarea
	min-height 140px
	resize none
	
.thumbnail-obra
	 //Esta parte se va a editar
	background-position center !important
	background-repeat no-repeat !important
	background-size 100% auto !important
	color white
	font-size 45px
	height 200px
	line-height 200px
	margin 0px 0 5px 0
	text-align center
	width 100%

	.formato
		background black
		display block
		opacity 0
		transition opacity 0.2s

	&:hover .formato
		opacity 0.6

.thumbnail-promotor
	background-position center !important
	background-repeat no-repeat !important
	background-size 100% 100% !important
	color white
	height 280px
	margin 0px 0 5px 0
	text-align center
	width 100%

	.descripcion-promotor
		background black
		display block
		font-size 20px
		height 100%
		margin 0
		opacity 0
		overflow auto !important
		padding 15px 10px
		transition opacity 0.2s
		width 100%

	&:hover .descripcion-promotor
		opacity 0.8


.triple-cuadro
	width 30%

.un-cuadro
	width 70%

.ventana-modal-sombra
	background rgba(black, 0.7)
	bottom 0
	left 0
	position fixed
	right 0
	text-align center
	top 0
	z-index 3

.ventana-modal-contenedor
	background white
	border 1px solid #aaa
	border-radius 5px
	display inline-block
	margin-top 120px
	max-height 415px
	padding 15px
	position relative
	width 450px

	input[type="radio"]
		width auto

.ventana-modal-contenido
	background #ededed
	border 1px solid #aaa
	border-radius 5px
	display inline-block
	max-height 290px
	overflow-x hidden !important
	overflow-y auto !important
	padding 10px
	position relative
	text-align left
	width 100%

.texto-estadisticas
	color #888
	display block
	font-family Montserrat
	font-size 25px
	margin-top 5px

.titulo-azul
	color azul_sitio
	font-family Montserrat
	font-size 40px

.titulo-caja
	background azul_sitio
	color white
	font-family "Montserrat"
	margin 0
	padding 10px
	text-align center

.vincula
	a
		border-radius 10px
		color white
		display inline-block
		font-weight 700
		line-height 30px
		margin 5px
		padding 5px
	
	.iconos:before
		background white
		border-radius 6px
		font-size 30px
		font-weight normal
		
	.icono-facebook
		background #4862a3
	
	.icono-google
		background #b43525
	
	.icono-twitter
		background #55acee

@media screen and (max-width:800px)
	#barra-lateral
		width 35%

	#bienvenida .recuadro
		div
			width 100%
		img
			position relative

	#cuadro-busqueda
		left 0px
		right 80px

	#informacion, #configuraciones
		width 64%

		.bloque
			width 100%

	header #mozart-logo img
		display none
		
	.link-social
		font-size 13px

	#section-general .formulario
		width 90%
	
	textarea.un-cuadro
		width 88%

	div.un-cuadro, div.doble-cuadro, div.triple-cuadro
		display block
		width 98%

@media screen and (max-width:530px)
	#barra-lateral
		max-width 300px
		width 90%
		
	.etiqueta-input
		font-size 12px
		
	#informacion, #configuraciones
		width 100%

@media screen and (max-width:430px)
	#obras-principal
		padding 5px 0

	.publicacion
		width 300px

		.thumbnail
			line-height 166px
			height 166px
