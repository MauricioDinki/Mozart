.modal-dialog-container
	background white
	display block
	margin 18% auto
	max-height 415px
	max-width 500px
	padding 15px
	position relative
	width 95%
	
	.button
		margin 5px
	
	hr
		hr-mixin(mozart-light-blue)

.modal-dialog-content
	background #f5f5f5
	border-radius 5px
	display inline-block
	max-height 290px
	overflow-x hidden !important
	overflow-y auto !important
	padding 10px
	position relative
	text-align left
	width 100%
	
.modal-dialog-shadow
	background rgba(black, 0.7)
	bottom 0
	left 0
	position fixed
	right 0
	text-align center
	top 0
	z-index 6

